@page "/students"
@model ASP.NET.CORE.EXAMPLE.Pages.StudentModel
@{
    ViewData["Title"] = "Student";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

    <form method="POST">

        <div class="form-group">
            <label for="name" class="col-form-label">Öğrenci Adı</label>
            <input type="text" asp-for="Student.NameSurname" class="form-control" />
        </div>
        <div class="form-group">
            <label for="name" class="col-form-label">Öğrenci Yaş</label>
            <input asp-for="Student.Sex" class="form-control" />
        </div>
        <div class="form-group">
            <label for="name" class="col-form-label">Öğrenci Resmi</label>
            <input asp-for="Student.ProfileAvatar" class="form-control" />
        </div>
        <div class="form-group">
            <button class="btn btn-success btn-sm" type="submit">Kaydet</button>
        </div>
    </form>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Profile</th>
                <th>Sex</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.GetStudents())
            {
            <tr>
                <td>@Html.DisplayFor(s => item.NameSurname)</td>
                <td>
                    <img src="@Html.DisplayFor(sa=>item.ProfileAvatar)"/>
                </td>
                <td>@Html.DisplayFor(s => item.Sex)</td>
                <td>
                    <a asp-page="/Student" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
            }

        </tbody>
    </table>   


